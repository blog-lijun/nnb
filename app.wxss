/**app.wxss**/
.container {
  /*height: 100%;*/
  /* display: flex; */
  /* flex-direction: column; */
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.title {
  color: #787878;
  font-weight: bold;
}
.content {
  color: #787878;
  font-size: 28rpx;
}
::-webkit-scrollbar {
  display: none;
}

.primary {
  background: #3481f7;
  border: 1px solid #3481f7;
  color: #ffffff;
}
.fixed-phone {
  position: fixed;
  top: 30%;
  right: 0;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.3);
  color: #ffffff;
}
.fixed-phone image {
  width: 30px;
  height: 30px;
}
