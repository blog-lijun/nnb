<!--pages/index/detail/detail.wxml-->

<view class="container" > 
  <view>
     <image src="{{ info.pic }}" mode="widthFix" style="width:100%;" />
  </view>
  <!-- 产品名称、价格说明 -->
  <view class="production">
    <text>标题： {{ info.name }}</text>
  </view>

  <!-- 服务内容 -->
  <view class="serve">
    <rich-text class="content"  nodes="{{ info.content }}" ></rich-text>
  </view>

  <!-- 咨询表单 -->
  <view>
     <input class="zixun" type="text" model:value="{{ name }}"  placeholder="请输入您的称呼" />
     <input class="zixun" type="number" maxlength="11" model:value="{{ phone }}" placeholder="请输入您的手机号"  />
     <view class="code" >
       <input class="zixun" type="number" maxlength="6" model:value="{{ code }}" placeholder="请输入验证码" style="width:66%;" />  
       <text  style="font-size:30rpx;color:blue;text-align:center;" bindtap="getCode"> {{ codeText }} </text>
     </view>

     <button class="jsbl" bindtap="zx_insert" >急速办理</button>
  </view>

</view>
